<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="coin"
            type="com.example.criptos.model.AvailableBook"/>
    </data>

    <androidx.appcompat.widget.Constraitlayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingClass"/>

        <androidx.appcompat.widget.AppCompatImagenView
            android:id="@+id/iv_coin"
            android:layout_width="50dp"
            android:layout_heigth="50dp"
            app:layout_constraintStart_to_StartOf="parent"
            app:layout_contraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="8dp"
            android:tint="@color/imagen_main_color"
            tools:src="@drawable/ic_launcher_background"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_coin_name"
            android:layout_width="0dp"
            android:layout_heigth="wrap_content"
            app:layout_constraintStart_to_EndOf="@+id/iv_coin"
            app:layout_constraint_top_to_TopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:maxLines="2"
            android:layout_marginHorizontal="8dp"
            android:textzise="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:text="Bitcoin"
            android:textColor="@color/imagen_main_color"
            android:text="@{coin.book}"/>

            <androidx.constraintlayout.widget.Guiline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_heigth="wrap_content"
                app:layout_constraintGuile_percent="0.45"
                android:orietation="vertical"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_maximum_price"
            android:layout_width="0dp"
            android:layout_heigth="wrap_content"
            android:width="1dp"
            app:layout_constraintStart_to_EndOf="@+id/guideline"
            app:layout_constraint_top_to_TopOf="parent"
            app:layout_constraintBottomOf="parent"
            android:layout_marginStar="8dp"
            android:layout_marginEnd="8dp"
            android:textzise="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:drawableStart="@drawable/ic_launcher_background"
            tools:text="1000"
            android:textColor="@color/imagen_main_color"
            android:drawableTint="@color/main_color"
            android:gravity="center_vertical"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_minimum_price"
            android:layout_width="0dp"
            android:layout_heigth="wrap_content"
            app:layout_constraintStart_to_EndOf="@+id/iv_coin"
            app:layout_constraint_top_to_TopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:maxLines="2"
            android:layout_marginHorizontal="8dp"
            android:textzise="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:text="Bitcoin"
            android:textColor="@color/imagen_main_color"
            android:text="@{coin.book}"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>